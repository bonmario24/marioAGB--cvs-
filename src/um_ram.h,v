#define BG1_UNIT_BUFFER		0x02000000
#define BG2_UNIT_BUFFER		(BG1_UNIT_BUFFER + (0xb00 * 2))
#define BG3_UNIT_BUFFER		(BG2_UNIT_BUFFER + 0xb00)
//#define BG1_CHAR_BUFFER_H	(BG3_UNIT_BUFFER + 0x600)
